<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    android:id="@+id/achievementcard"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_65sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/achievementimage"
            android:src="@drawable/achievementend"
            android:layout_marginLeft="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/achievementname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama achievement"
            android:fontFamily="@font/brussels"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textSize="@dimen/_14sdp"
            app:layout_constraintLeft_toRightOf="@id/achievementimage"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/achievementdescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description Achievement"
            android:fontFamily="@font/brussels"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintLeft_toRightOf="@id/achievementimage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/achievementname" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>