<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueViolet">


    <TextView
        android:id="@+id/buy_dialog_text"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/melanie"
        android:textSize="20dp"
        android:text="Are you sure want to buy this avatar?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="19dp"
    android:gravity="center"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/buy_dialog_text"
    app:layout_constraintVertical_bias="0.0">


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dialog_yes"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:background="@drawable/dialogboxyes"
        android:text="YES"
        android:textColor="@color/black"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/dialog_no"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/dialogboxno"
            android:text="NO"
            android:textColor="@color/black"/>



</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>